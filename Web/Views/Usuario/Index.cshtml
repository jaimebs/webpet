@{
    ViewBag.Title = "Index";
}

<div class="col-sm-12">
    <h4 class="page-title">Lista de Usuários</h4>
    <ol class="breadcrumb">
        @*<li><a href="#">Bread1</a></li>
        <li><a href="#">Bread2</a></li>
        <li class="active">Bread3</li>*@
    </ol>
</div>

<div class="row" ng-app="app" ng-controller="UsuarioIndex">
    <div class="col-sm-12">
        <div style="text-align: right">
            <button type="button" class="btn btn-success waves-effect waves-light" ng-click="Novo()">
                <span class="btn-label"><i class="fa fa-check"></i></span>Novo
            </button>
        </div>
        <br/>
        <div class="card-box">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-search"></i></span>
                <input type="search" class="form-control" ng-model="pesquisa" placeholder="Digite para efetuar a pesquisa">
            </div>
            <br/>
            <table class="table table-condensed table-striped table-bordered table-hover" ng-show="resultado.length > 0">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in Usuarios | filter : pesquisa as resultado">
                        <td>{{item.Nome}}</td>
                        <td>{{item.Email}}</td>
                        <td>
                            <button type="button" class="btn btn-warning waves-effect waves-light" ng-click="Editar(item.Id)">
                                <span class="btn-label"><i class="fa fa-pencil"></i></span>Editar
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="alert alert-warning" ng-show="resultado.length == 0">
                <strong>Aviso!</strong> Nenhum usuário localizado!
            </div>
        </div>
    </div>
</div>

