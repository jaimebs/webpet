
@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A fully featured admin theme which can be used to build CRM, CMS, etc.">
    <meta name="author" content="Coderthemes">

    <link rel="shortcut icon" href="~/Imagens/favicon_1.ico">

    <title>WebPet - Seu PetShop na Web</title>


    <link href="~/Content/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Css/core.css" rel="stylesheet" />
    <link href="~/Content/Css/components.css" rel="stylesheet" />
    <link href="~/Content/Css/icons.css" rel="stylesheet" />
    <link href="~/Content/Css/pages.css" rel="stylesheet" />
    <link href="~/Content/Css/responsive.css" rel="stylesheet" />
    <link href="~/Content/Css/sweetalert.min.css" rel="stylesheet" />
    
    <script src="~/Scripts/angular/angular.min.js"></script>
    <script src="~/Scripts/Controllers/LoginController.js"></script>
    <script src="~/Scripts/sweetalert.min.js"></script>

    <script src="~/Scripts/modernizr.min.js"></script>
  
    <style type="text/css">
        .login-page {
            background-image: url('../../Imagens/pet-shop-login.jpg');
            background-repeat: no-repeat;
            background-size: 100%;
            bottom: 0;
            color: black;
            left: 0;
            overflow: auto;
            padding: 3em;
            position: absolute;
            right: 0;
            text-align: center;
            top: 0;
            background-size: cover;
        }

        .login-Conteiner {
            opacity:0.95;
	        -moz-opacity: 0.95;
	        filter: alpha(opacity=95);
        }
    </style>

</head>
<body>

    <div class="account-pages login-page"></div>
    <div class="clearfix"></div>
    <div class="wrapper-page" ng-app="appLogin" ng-controller="Login">
        <div class=" card-box login-Conteiner">
            <div class="panel-heading">
                <h3 class="text-center">Web<strong class="text-custom">Pet</strong> </h3>
            </div>
            <div class="panel-body">
                <form name="form">
                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="col-md-12 control-label">Usuário</label>
                            <input type="text" class="form-control" placeholder="Digite o Usuário" ng-model="usuario.Login" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 form-group">
                            <label class="col-md-12 control-label">Senha</label>
                            <input type="password" class="form-control" placeholder="Digite a senha" ng-model="usuario.Senha" required>
                        </div>
                    </div>
                </form>
                <div class="row">
                    <div class="form-group text-center m-t-15">
                        <div class="col-md-12">
                            <button class="btn btn-default btn-block text-uppercase waves-effect waves-light" ng-disabled="form.$invalid" ng-click="Logar(usuario)">Entrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
            var resizefunc = [];
    </script>

    <!-- jQuery  -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/detect.js"></script>
    <script src="~/Scripts/fastclick.js"></script>
    <script src="~/Scripts/jquery.slimscroll.js"></script>
    <script src="~/Scripts/jquery.blockUI.js"></script>
    <script src="~/Scripts/waves.js"></script>
    <script src="~/Scripts/wow.min.js"></script>
    <script src="~/Scripts/jquery.nicescroll.js"></script>
    <script src="~/Scripts/jquery.scrollTo.min.js"></script>

    <script src="~/Scripts/jquery.core.js"></script>
    <script src="~/Scripts/jquery.app.js"></script>
    

</body>

</html>

